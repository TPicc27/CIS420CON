<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>School of Nursing - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="[ navbar navbar-fixed-top ][ navbar-bootsnipp animate ]" role="navigation">
        <div class="[ container ]">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="[ navbar-header ]">
                <button type="button" class="[ navbar-toggle ]" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="[ sr-only ]">Toggle navigation</span>
                    <span class="[ icon-bar ]"></span>
                    <span class="[ icon-bar ]"></span>
                    <span class="[ icon-bar ]"></span>
                </button>
                <div class="[ animbrand ]">
                    <a class="[ navbar-brand ]" href="http://uofl.edu"><img src="~/Content/Images/Navbar Logo.png" class="img-responsive" /></a>
                </div>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="[ collapse navbar-collapse ]" id="bs-example-navbar-collapse-1">
                <ul class="[ nav navbar-nav navbar-right ]">
                    <li class="[ visible-xs ]">
                        <form action="http://bootsnipp.com/search" method="GET" role="search">
                            <div class="[ input-group ]">
                                <input type="text" class="[ form-control ]" name="q" placeholder="Search for snippets">
                                <span class="[ input-group-btn ]">
                                    <button class="[ btn btn-primary ]" type="submit"><span class="[ glyphicon glyphicon-search ]"></span></button>
                                    <button class="[ btn btn-danger ]" type="reset"><span class="[ glyphicon glyphicon-remove ]"></span></button>
                                </span>
                            </div>
                        </form>
                    <li>
                        <a class="paypal-fit">
                        <form name="_xclick" action="https://www.paypal.com/uk/cgi-bin/webscr" method="post">
                            <input type="hidden" name="cmd" value="_xclick">
                            <input type="hidden" name="business" value="me@mybiz.co.uk">
                            <input type="hidden" name="item_name" value="Team In Training">
                            <input type="hidden" name="currency_code" value="GBP">
                            <input type="hidden" name="amount" value="25.00">
                            <input type="image" src="http://www.paypal.com/en_GB/i/btn/x-click-butcc-donate.gif" border="0" name="submit"
                                   alt="Make payments with PayPal - it's fast, free and secure!">
                        </form>
                        </a>
                    </li>
                        <li>
                        <!--Facebook Logo to CON Facebook account-->
                        <a target="_blank" title="find us on Facebook" href="https://www.facebook.com/UniversityOfLouisvilleSchoolOfNursing/">
                            <img alt="follow me on facebook" src="//login.create.net/images/icons/user/facebook_40x40.png"
                                 class="logo-facebook" border="0">
                        </a>
                        </li>
                        <li>
                        <!--Twitter Logo to CON Twitter handle-->
                        <a target="_blank" title="follow me on twitter" href="https://twitter.com/uofl_son">
                            <img alt="follow me on twitter" src="//login.create.net/images/icons/user/twitter_40x40.png"
                                 class="logo-twitter" border="0">
                        </a>
                        </li>
                </ul>
            </div>
        </div>
    </nav>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            &copy; Copyright 2017 Nothing But Net
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/Main.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
